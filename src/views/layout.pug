<!DOCTYPE html>
html(lang="en")
  head
    include partials/head
  body
    header.barra
      h2 Uptask - Projects management
      a(href="/auth/exit") Exit
    main.contenedor
      aside.contenedor-proyectos
        .panel.crear-proyecto
          a(href="/projects/new" class="boton") New Project
            span +
        .panel.lista-proyectos
          h2 Projects
          ul#proyectos.proyectos
            if(projects.length)
              each project in projects 
                li
                  a(href=`/projects/show/${project.url}`)= project.name
      block content
  script(src="./../../public/dist/bundle.js")